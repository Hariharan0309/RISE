# AWS Credentials
AWS_ACCESS_KEY_ID=your_access_key_here
AWS_SECRET_ACCESS_KEY=your_secret_key_here
AWS_DEFAULT_REGION=us-east-1

# AWS Service Configuration
AWS_BEDROCK_MODEL_ID=anthropic.claude-3-5-sonnet-20241022-v2:0
AWS_S3_BUCKET=missionai-farmer-uploads

# Amazon Transcribe Configuration
AWS_TRANSCRIBE_LANGUAGE_CODES=en-IN,hi-IN,kn-IN

# Amazon Polly Configuration
AWS_POLLY_VOICE_ID_ENGLISH=Aditi
AWS_POLLY_VOICE_ID_HINDI=Aditi
AWS_POLLY_VOICE_ID_KANNADA=Aditi

# Application Configuration
APP_ENV=development
DEBUG=True
LOG_LEVEL=INFO

# Session Configuration
SESSION_TIMEOUT_MINUTES=30
MAX_CONVERSATION_HISTORY=10

# Feature Flags
ENABLE_OFFLINE_MODE=True
ENABLE_COMMUNITY_FORUM=True
ENABLE_VOICE_INPUT=True

# Mock Data (for development/testing)
USE_MOCK_WEATHER_API=True
USE_MOCK_MARKET_API=True
MOCK_DATA_PATH=./data
